<!doctype html>
<!-- Joseph DeVictoria 2017 -->
        <div class="container">
            <center>
                <div>
                    {{#if get}}
                    <form name="registration" method="post" action="/register" role="form">
                            <div class="row">
                                <div class="six columns">
                                    <label for="registration_username">Username</label>
                                    <input type="text" id="registration_username" name="registration_username" required="required" maxlength="30" pattern="[A-Za-z0-9]{3,}">
                                </div>
                                <div class="six columns">
                                    <label for="registration_email">Email</label>
                                    <input type="email" id="registration_email" name="registration_email" required="required">
                                </div>
                            </div>
                            <div class="row">
                                <div class="six columns">
                                    <label for="registration_password_first">Password (min 6)</label>
                                    <input type="password" id="registration_password_first" name="registration_password_first" required="required" maxlength="30" pattern="[A-Za-z0-9]{6,}">
                                </div>
                                <div class="six columns">
                                    <label for="registration_password_second">Confirm (min 6)</label>
                                    <input type="password" id="registration_password_second" name="registration_password_second" required="required" maxlength="30" pattern="[A-Za-z0-9]{6,}">
                                </div>
                            </div>
                            <input class="button-primary" type="submit" value="Register">
                    </form>
                    {{/if}}
                    {{#if post}}
                    <h1>Registration submitted, please check your email to complete verification!</h1>
                    {{/if}}
                    {{#if exists}}
                    <h1>An account for this username or email already exists!</h1>
                    {{/if}}
                </div>
            </center>
        </div>
